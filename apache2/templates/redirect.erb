<%- if @source.is_a? Array -%>
<% @source.each do |src| -%>
RedirectMatch permanent <%= "#{src}" -%> <%= destination %>
<% end -%>
<%- else -%>
RedirectMatch permanent <%= "#{source}" -%> <%= destination %>
<% end -%>
